{
  "appId": "com.nadia.app",
  "productName": "Nadia ❤️",
  "copyright": "Copyright © 2024 Nadia App",
  "description": "Interactive customization and styling application",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*.cjs"
  ],
  "icon": "build/icon.png",
  "compression": "maximum",
  "artifactName": "Nadia-${version}-${os}-${arch}.${ext}",
  "mac": {
    "category": "public.app-category.lifestyle",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Nadia Dev"
  },
  "linux": {
    "category": "Graphics",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Nadia ❤️"
  },
  "dmg": {
    "title": "Install Nadia ❤️",
    "backgroundColor": "#ec4899",
    "window": {
      "width": 600,
      "height": 400
    }
  },
  "publish": {
    "provider": "generic",
    "url": "https://your-domain.com/releases/"
  }
}
